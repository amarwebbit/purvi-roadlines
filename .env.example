# Example .env file. Copy this to .env and fill in values before running the server.
# Do NOT commit your real credentials into source control.

# SMTP server host (e.g., smtp.gmail.com)
SMTP_HOST=smtp.example.com

# SMTP server port (587, 465, etc.)
SMTP_PORT=587

# true or false. For ports like 465 use true, for 587 usually false
SMTP_SECURE=false

# SMTP auth username and password
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# FROM email address (optional). If omitted, SMTP_USER will be used as sender address
FROM_EMAIL=you@example.com

# Email that should receive the contact form submissions
TO_EMAIL=your_personal_email@example.com

# Server port (optional)
PORT=3000
